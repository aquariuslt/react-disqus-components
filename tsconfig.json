{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "__tests__"
  ]
}
